{
    "files.autoSave": "onFocusChange",
    "update.mode": "start",

    "window.openFoldersInNewWindow": "on",
    "window.newWindowDimensions": "maximized",
    "window.commandCenter": true,
    "window.zoomLevel": -0.15,


    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#111111",
            "strikethrough": false,
            "backgroundColor": "#FF2D00"
        },
        {
            "tag": "?",
            "color": "#111111",
            "strikethrough": false,
            "backgroundColor": "#3498DB"
        },
        {
            "tag": "//",
            "color": "#98C379",
            // "color": "#474747",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "todo",
            "color": "#111111",
            "strikethrough": false,
            "backgroundColor": "#FF8C00"
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ],

    //old sync
    // "sync.gist": "fa6c74d096602446b01bf9edffd2f417",
    // "sync.autoUpload": true,

    "files.defaultLanguage": "JavaScript",
    "files.trimFinalNewlines": true,

    "prettier.proseWrap": "never",
    "prettier.singleQuote": true,
    "togglequotes.chars": [
        "`",
        "\"",
        "'"
    ],

    "files.associations": {
        "*.twig": "html",
        "*.tpl": "php"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "turboConsoleLog.quote": "'",
    "turboConsoleLog.addSemicolonInTheEnd": true,
    "turboConsoleLog.insertEnclosingClass": false,
    "turboConsoleLog.insertEnclosingFunction": false,
    "turboConsoleLog.includeFileNameAndLineNum": false,
    "debugwrapper.wrappers": {
        "javascript": "console.log('$eSEL', $SEL)",
        "typescript": "console.log('$eSEL', $SEL)",
        "vue": "console.log('$eSEL', $SEL)",
        "php": "echo '$eSEL : '; var_dump($SEL);",
        "default": "console.log('$eSEL', $SEL)"
    },

    "liveServer.settings.donotShowInfoMsg": true,
    "ecsstractor_port.bem_nesting": true,


    "javascript.updateImportsOnFileMove.enabled": "prompt",


    "atlascode.bitbucket.explorer.refreshInterval": 60,
    "atlascode.bitbucket.pipelines.explorerEnabled": false,
    "atlascode.jira.enabled": true,
    "atlascode.jira.explorer.enabled": true,
    "atlascode.jira.explorer.fetchAllQueryResults": true,
    "atlascode.jira.explorer.monitorEnabled": true,
    "atlascode.jira.explorer.nestSubtasks": true,
    "atlascode.jira.explorer.refreshInterval": 30,
    "atlascode.jira.hover.enabled": false,
    "atlascode.jira.statusbar.enabled": true,
    "atlascode.jira.jqlList": [
        {
            "id": "70bd5fc1-603c-4f04-9223-0683d7622368",
            "enabled": true,
            "name": "My horoshop Issues",
            "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
            "siteId": "53d1444e-9ebb-46c2-8a29-75b88cffdcd0",
            "monitor": true
        }
    ],
    "yaml.schemas": {
        "file:///home/f1del/.vscode/extensions/atlassian.atlascode-2.10.12/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
    },


    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    "workbench.list.smoothScrolling": true,

    "editor.tabSize": 2,
    "editor.autoClosingDelete": "always",
    "editor.find.addExtraSpaceOnTop": false,
    "editor.mouseWheelScrollSensitivity": 1.5,
    "editor.smoothScrolling": true,
    "editor.wordSeparators": "`~!@#%^&*()-_=+[{]}\\|;:'\",.<>/?",
    "editor.renderWhitespace": "all",

    "code-eol.newlineCharacter": "¬",
    "code-eol.returnCharacter" : "¤",
    "code-eol.crlfCharacter"   : "¤¬",

    "editor.renderControlCharacters": true,
    "editor.suggest.preview": true,
    "editor.fastScrollSensitivity": 4,

    "editor.multiCursorModifier": "alt",


    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": true,

    "git.terminalAuthentication": false,
    "git.autofetch": "all",
    "gitlens.views.branches.branches.layout": "list",
    "redhat.telemetry.enabled": false,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1660131371699,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.enablePreview": true, // open files temporary!!!!

    // "bracket-pair-colorizer-2.showBracketsInGutter": true,
    // "bracket-pair-colorizer-2.showBracketsInRuler": true,


    "workbench.colorCustomizations": {
        "[Monokai Night]": {
            "sideBar.background": "#151515",
            "editorWhitespace.foreground": "#333"
        },

        // "editorIndentGuide.activeBackground": "#aaa",
        "editorIndentGuide.background": "#2c2c2c",
    },

    "editor.tokenColorCustomizations": {
        "[Monokai Night]": {
            "textMateRules": [
