                        "fontStyle": "italic"
                    },
                },
                {
                    "scope": "keyword.control.elseif.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    },
                },
                {
                    "scope": "keyword.control.endif.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword.control.foreach.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword.control.endforeach.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword.control.for.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": "keyword.control.endfor.php",
                    "settings": {
                        "foreground": "#c09eff",
                        "fontStyle": "italic"
                    }
                }

            ]
        }
    },

    //brackets
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active", //true, false, active
    "editor.guides.bracketPairsHorizontal": "active",
    // "editor.guides.indentation": true,
