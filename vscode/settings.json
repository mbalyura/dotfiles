    "editor.minimap.maxColumn": 50,

    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "tabnine.experimentalAutoImports": true,
    "ecsstractor_port.add_comment": false,
    "ecsstractor_port.brackets_newline_after": false,
    "ecsstractor_port.indentation": " ",
    "customWindowZoom.zoomLevelChangeValue": 0.05,

    "search.maxResults": null,
    "gulp.autoDetect": "on",
    "atlascode.jira.lastCreateSiteAndProject": {
        "siteId": "53d1444e-9ebb-46c2-8a29-75b88cffdcd0",
        "projectKey": "B2B"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    "workbench.productIconTheme": "fluent-icons",
    "workbench.iconTheme": "material-icon-theme",
    "gitlens.codeLens.enabled": false,
    // "search.useIgnoreFiles": false,

    "wrapSelection.patterns": {
        "t": "{{ $t('${text}') }}",
        "tt": "this.$t(${text})",
        "ta": "$t('${text}')",
        "td": "_t(${text})",
    },
    "timeline.excludeSources": [
        "timeline.localHistory"
    ],

    "eslint.workingDirectories": [
        {"mode": "auto"}
    ],


    "phpcs.enable": true,
    "phpcs.ignorePatterns": ["*/vendor/*"],
    "phpcs.standard": "PSR2",
