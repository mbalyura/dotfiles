//This layout is for "Hardware" Colemak keyboard, that send direct Colemak keycodes
partial alphanumeric_keys
xkb_symbols "ru_colemak_hard" {
    include "ru(winkeys)" //

    name[Group1]= "Russian for Colemak keyboard (plus Ukrainian and Belarusian letters)";

    key <TLDE> { [  U2019,                   apostrophe, U0301,  asciitilde  ] };  // Apostrophe and Stress symbol
