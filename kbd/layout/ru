    key <AD10>	{[       Cyrillic_ka,       Cyrillic_KA  ]};                                                        //p
    key <AC05>	{[       Cyrillic_ie,       Cyrillic_IE,   Cyrillic_io, Cyrillic_IO  ]};                            //g
    key <AC07>	{[       Cyrillic_en,       Cyrillic_EN  ]};                                                        //j
    key <AC09>	{[      Cyrillic_ghe,      Cyrillic_GHE, Ukrainian_ghe_with_upturn, Ukrainian_GHE_WITH_UPTURN  ]};  //l
    key <AD07>	{[      Cyrillic_sha,      Cyrillic_SHA  ]};                                                        //u
    key <AD06>	{[    Cyrillic_shcha,    Cyrillic_SHCHA  ]};                                                        //y
    key <AC10>	{[       Cyrillic_ze,       Cyrillic_ZE  ]};                                                        //;
    // key <AD11>	{[       Cyrillic_ha,       Cyrillic_HA  ]};                                                    //[
