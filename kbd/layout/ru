    // key <AC01>  {[   Cyrillic_ef,           Cyrillic_EF  ]};                                                     //a
    key <AD04>  {[   Cyrillic_yeru,       Cyrillic_YERU, Ukrainian_yi, Ukrainian_YI  ]};                            //r
    key <AC02>  {[   Cyrillic_ve,           Cyrillic_VE  ]};                                                        //s
    key <AD05>  {[   Cyrillic_a,             Cyrillic_A  ]};                                                        //t
    key <AC03>	{[   Cyrillic_pe,           Cyrillic_PE  ]};                                                        //d
