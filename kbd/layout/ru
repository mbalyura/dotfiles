    key <AB06>	{[        Cyrillic_o,        Cyrillic_O  ]};                                                        //n
    key <AD03>	{[       Cyrillic_el,       Cyrillic_EL  ]};                                                        //e
    key <AD08>	{[       Cyrillic_de,       Cyrillic_DE  ]};                                                        //i
    key <AD09>	{[      Cyrillic_zhe,      Cyrillic_ZHE  ]};                                                        //o
    key <AC11>	{[        Cyrillic_e,        Cyrillic_E, Ukrainian_ie, Ukrainian_IE  ]};                            //'


    // key <AB01>	{[       Cyrillic_ya,       Cyrillic_YA  ]};                                                    //z
