    key <AB05>	{[        Cyrillic_i,        Cyrillic_I, Ukrainian_i,  Ukrainian_I  ]};                             //b (keycode not changed)
    key <AC08>	{[       Cyrillic_te,       Cyrillic_TE  ]};                                                        //k
